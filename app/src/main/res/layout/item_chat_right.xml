<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingRight="2dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/seen"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="3dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/background_seen_chat"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/time_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:20"
        android:layout_marginRight="18dp"
        android:layout_alignParentEnd="true"/>
    <RelativeLayout
        android:id="@+id/layout_mess1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_message"
        android:layout_toLeftOf="@+id/seen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_message"
            android:background="@drawable/border_item_right_chat"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="normal"></TextView>
        <ImageView
            android:id="@+id/show_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true">
        </ImageView>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_shop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="25dp"
        android:visibility="gone"/>
</RelativeLayout>