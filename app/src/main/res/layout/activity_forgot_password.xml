<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".Activity.GetOTP">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/muli_semibold"
            android:text="QUÊN MẬT KHẨU"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/tv_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:fontFamily="@font/muli_semibold"
            android:text="@string/otp_verification"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:text="Nhập số điện thoại"
            android:gravity="center_horizontal"
            android:textColor="@color/cTextSecondary"
            android:textSize="14sp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/tv_otp_send_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:visibility="gone"
            android:text="@string/enter_the_otp_send_to"
            android:gravity="center"
            android:textColor="@color/cTextSecondary"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">
            <TextView

                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/tv_countryCode"
                android:text="+84-"
                android:textSize="16sp"
                android:textStyle="bold"
                ></TextView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="123456789"
                android:id="@+id/inputMobile"
                android:textSize="16sp"
                android:inputType="phone"
                android:textStyle="bold"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:textColor="@color/cTextPrimary"></EditText>
            <EditText
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/cTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"></EditText>

            <EditText
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode2"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/cTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"></EditText>

            <EditText
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode3"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/cTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"></EditText>
            <EditText
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode4"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/cTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"></EditText>
            <EditText
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode5"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/cTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"></EditText>
            <EditText
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:id="@+id/inputCode6"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/cTextPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"></EditText>



        </LinearLayout>

        <View
            android:id="@+id/v_dash"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="70dp"
            android:background="@color/colorDivider"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonGetOTP"
                android:layout_margin="30dp"
                android:background="@drawable/backgournd_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhận mã OTP"
                android:textColor="@color/cWhite"
                android:textStyle="bold"
                android:textSize="16sp"></Button>
            <Button
                android:visibility="gone"
                android:id="@+id/buttonVerify"
                android:layout_margin="30dp"
                android:background="@drawable/backgournd_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verify"
                android:textColor="@color/cWhite"
                android:textStyle="bold"
                android:textSize="16sp"></Button>

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:visibility="gone"></ProgressBar>
        </FrameLayout>



    </LinearLayout>
</ScrollView>